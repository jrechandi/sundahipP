{% extends 'NewTemplateBundle::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/solicitudescitas/css/genstyles.css')}}" rel="stylesheet">
    <link href="{{ asset('bundles/solicitudescitas/css/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" media="print">

{% endblock stylesheets %}

{% block content_content %}
    <div class="block-separator col-sm-12"></div>
    <div class="tit_principal">Clasificación de Licencia</div>

    <div class="col-md-12">
        <table class="record_properties table table-condensed">
            <thead>
                <tr>
                    <th colspan="2" >Datos de la Licencia</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Clasificación de Licencia</th>
                    <td>{{ entity.clasfLicencia }}</td>
                </tr>
                <tr>
                    <th>Tipo de Operadora</th>
                    <td>{{ entity.admTiposLicencias.tipoLicencia }}</td>
                </tr>
                <tr>
                    <th>Recaudos</th>
                    <td>
                        <ul>
                        {% for recaudo in entity.admRecaudosLicencias %}
                            <li>{{ recaudo.recaudo }}</li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Juegos Explotados</th>
                    <td>
                        <ul>
                        {% for juego in entity.admJuegosExplotados %}
                            <li>{{ juego.juego }}</li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Valor Solicitud (UT)</th>
                    <td>{{ entity.solicitudUt }}</td>
                </tr>
                <tr>
                    <th>Valor Otorgamiento (UT)</th>
                    <td>{{ entity.otorgamientoUt }}</td>
                </tr>
                <tr>
                    <th>Código Generación Licencia</th>
                    <td>{{ entity.codLicencia }}</td>
                </tr>
                <tr>
                    <th>Requiere Operadora</th>
                    <td>{{ entity.hasOperadora==1?'Requiere':'No Requiere' }}</td>
                </tr>
                <tr>
                    <th>Requiere Hipódromo</th>
                    <td>{{ entity.hasHipodromo==1?'Requiere':'No Requiere' }}</td>
                </tr>
                <tr>
                    <th>Estatus</th>
                    <td>{{ entity.status==1?'Activo':'Inactivo' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-6 col-md-offset-2 form-group btn-group">
        <div class="col-md-6" style="text-align:center"><a href="{{ path('admclasflicencias') }}" class="btn btn-primary btn-sm ">Regresar</a></div>
        {#
        <div class="col-md-4" style="text-align:center"><a href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal">Eliminar</a></div>#}
        <div class="col-md-6" style="text-align:center"><a href="{{ path('admclasflicencias_edit', { 'id': entity.id }) }}" class="btn btn-success btn-sm ">Modificar</a></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
                    <h4 class="modal-title" id="myModalLabel">Eliminar el Registro</h4>
                </div>
                <div class="modal-body">
                    Realmente desea eliminar el registro <b>"{{entity.clasfLicencia}}"</b>?
                </div>
                <div class="modal-footer">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit) }}
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock content_content %}
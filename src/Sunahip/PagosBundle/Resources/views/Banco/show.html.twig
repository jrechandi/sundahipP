{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Banco</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Banco</th>
                <td>{{ entity.banco }}</td>
            </tr>
            <tr>
                <th>Numerocuenta</th>
                <td>{{ entity.numeroCuenta }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ entity.activo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('banco') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('banco_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

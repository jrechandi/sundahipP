{% trans_default_domain 'FOSUserBundle' %}
<div class="padding-15">
    <div class="block-separator col-md-12"></div>    
    {% block content_content %}
    <div class="col-sm-offset-3 col-sm-6">
            {% block fos_user_content %}
            <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
                <h2>Recuperar contrase√±a</h2>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, { 'label_attr': { 'class':'col-sm-4 padding-1' }}) }}
                    <div class="col-sm-8">
                        <div class="col-sm-12 padding-1">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'onblur': 'validatePassword(this);','maxlength': '8'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, { 'label_attr': { 'class':'col-sm-4 padding-1' }}) }}
                    <div class="col-sm-8">
                        <div class="col-sm-12 padding-1">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'onblur': 'validatePassword(this);','maxlength': '8'} }) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-10 col-sm-2">
                        <button type="submit" id="reset_btn" class="btn btn-default pull-right">{{ 'resetting.reset.submit'|trans }}</button>
                    </div>
                </div>              
                {{ form_widget(form._token) }}
            </form>
             {% endblock fos_user_content %}
        </div>
    {% endblock content_content %}
    {% block foot_script %}
    <script src="{{asset('bundles/user/js/validaPassword.js')}}"></script>
{% endblock foot_script %}
</div>